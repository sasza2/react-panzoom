{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "es2019", "DOM"
    ],
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "paths": {
      "@/*": ["src/*"],
      "types": ["types/types"],
    },
    "rootDirs": [ "src", "types" ],
    "target": "es5",
  },
}
